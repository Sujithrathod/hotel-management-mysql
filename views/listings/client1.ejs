<% layout("/layouts/clientnav") %>
<body>
    <h1>All the Listings</h1>
    <!-- <form method="get" action="/listings/new">
        <button>Create New Listing</button>
    </form> -->
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
        <%for(let item of allListings){ %>
            <a href="/client/<%=item.title%>" class="listing-link">
                <div class="card col">
                    <img src="<%=item.image%>" class="card-img-top" alt="listing-image" style="height: 20rem;">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                    <h5 class="card-title"><b><%=item.title %></b></h5>
                    <p class="card-text">
                        <h6>&#8377;<%=item.price%> /night</h6>
                    </p>
                    </div>
                </div>
            </a>
          <% } %>
    </div>
</body>

