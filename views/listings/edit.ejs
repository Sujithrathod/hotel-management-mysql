<% layout("/layouts/boilerplate") %>
<body>
    <h3>Edit your listing</h3>
    <form method="post" action="/listings/<%=result.title%>?_method=PUT">
        <div>
            <label for="listing[title]" class="form-label">title</label>
            <input name="title" value="<%=result.title%>" class="form-control">
        </div>
        <div>
            <label for="listing[description]" class="form-label">description</label>
            <input name="description" value="<%=result.description%>" class="form-control">
        </div>
        <div>
            <label for="listing[image]" class="form-label">image</label>
            <input name="image" value="<%=result.image%>" class="form-control">
        </div>
        <div>
            <label for="listing[price]" class="form-label">price</label>
            <input name="price" value="<%=result.price%>" type="number"  class="form-control">
        </div>
        <div>
            <label for="listing[location]" class="form-label">Location</label>
            <input name="location" value="<%=result.location%>" class="form-control"> 
        </div>
        <div>
            <label for="listing[country]" class="form-label">Country</label>
            <input name="country" value="<%=result.country%>" class="form-control">
        </div>
        <button class="btn btn-dark mt-3">Edit</button>
    </form>
</body>
